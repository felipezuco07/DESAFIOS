  <script type="text/javascript">
   alert("Neste programa, pediremos para que você digite um número para verificarmos se ele é ou não maior que 20.");
 var numero = Number(prompt("Digite um número e informaremos se ele é maior que 20 ou não.")); 
 window.alert("ver se " + numero + " é maior que 20");
   
 if(numero > 20){
     window.alert(numero + " é maior que 20") ;
 }
 
 else if(numero === 20){
   alert(" é igual a 20"); 
 }
 else{
    alert("é menor que 20");
 }
</script>
