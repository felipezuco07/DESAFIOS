 <script type="text/javascript"> 
    alert("Digite dois números para que possamos efetuar a adição e exibi-lo.");
    alert("Caso o resultado seja maior que 20, iremos apresentar o resultado somando a ele mais 8; caso seja menor, iremos apresenta-lo subtraindo 5 do resultado.");
    var num1 = Number(prompt("Digite o primeiro valor e de ENTER: "));;
    var num2 = Number(prompt("Digite o segundo valor e de ENTER: "));

    alert("verificando o valores...");
    alert("efetuando a soma...");
    
    
    var r = (num1 + num2)
     if (r > 20) {
         alert (r + 8);
     }else{
          alert(r - 5);
     }
 </script>

