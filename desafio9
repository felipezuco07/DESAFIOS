 <script type="text/javascript">
   var estado = prompt("entr com a sigla do estado emm aiúsculo(de preferencia sp, mg, rj): ");
   switch (estado)
   { 
       case "SP":
          alert("Paulista");
          break;
       case "RJ":
          alert("Carioca");
          break
       case "MG":
          alert("Mineiro");
          break
       default:
          alert("Outros Estados");
   }
   
 </script>

